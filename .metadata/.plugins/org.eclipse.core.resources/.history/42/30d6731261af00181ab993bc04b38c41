package guibasic;

import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class TestGuiSwingBasic extends JFrame implements ActionListener {
	JButton b1, b2, b3, b4;
	JPanel p;
	TestGuiSwingBasic() {
		super("MyFrame 만들기"); // ==setTitle("MyFrame 만들기");
		setSize(350, 300);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // 프로그램 종료

		Container ctPane = getContentPane();
		ctPane.setBackground(Color.pink);

		ctPane.setLayout(new FlowLayout());
		b1 = new JButton("파란색");
		
		b1.addActionListener(this);
		ctPane.add(b1);

	}
	@Override
	public void actionPerformed(ActionEvent e) {
		if(e.getSource()==b1) {
			p.setBackground(Color.blue);
		}
	}
}
