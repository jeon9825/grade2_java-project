package guibasic;

import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;

class MyFrame extends JFrame {

	MyFrame() {
		super("MyFrame 만들기"); // ==setTitle("MyFrame 만들기");

		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // 프로그램 종료
		Container ctPane = getContentPane();
		ctPane.setBackground(Color.pink);

		ctPane.setLayout(new FlowLayout(FlowLayout.LEFT, 10, 20));
		ctPane.add(new JButton("더하기"));
		ctPane.add(new JButton("빼기"));
		ctPane.add(new JButton("곱하기"));
		ctPane.add(new JButton("나누기"));
		ctPane.add(new JButton("계산하기"));
		setSize(350, 300);
		setVisible(true);
	}
}

public class TestGuiSwingBasic {
	public static void main(String[] args) {
		MyFrame frame = new MyFrame();

	}
}
